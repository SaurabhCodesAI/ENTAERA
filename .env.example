# Environment Configuration for ENTAERA Kata
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Azure OpenAI API Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_DEPLOYMENT_NAME=gpt-35-turbo

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# Perplexity API Configuration  
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar
PERPLEXITY_MAX_TOKENS=4096
PERPLEXITY_TEMPERATURE=0.7

# Optional: OpenAI Direct API (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Application Settings
APP_NAME=ENTAERA
APP_VERSION=0.1.0
APP_DESCRIPTION="Kata-driven AI research agent"

# Security Settings
SECRET_KEY=your_secret_key_here_please_change_in_production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# LOCAL AI CONFIGURATION
# =============================================================================

# Local AI Settings
LOCAL_AI_ENABLED=true  # Set to false to disable local AI
CUDA_ENABLED=true  # Set to false if no GPU available
MAX_GPU_MEMORY_GB=4.0  # Adjust based on your GPU memory
DEVICE=cuda  # Options: cuda, cpu, mps (for Mac)

# Model Paths (local models)
CODE_MODEL_PATH=./models/codellama-7b-instruct.Q4_K_M.gguf
CHAT_MODEL_PATH=./models/llama-3.1-8b-instruct.Q4_K_M.gguf
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# DATABASE & STORAGE CONFIGURATION
# =============================================================================

# Vector Database Settings
VECTOR_STORE_TYPE=faiss
VECTOR_STORE_PATH=./data/vector_store
VECTOR_DIMENSION=1536
VECTOR_INDEX_TYPE=IndexFlatL2

# File Storage
DATA_DIR=./data
CACHE_DIR=./cache
LOGS_DIR=./logs

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Provider Selection Strategy
DEFAULT_PROVIDER=gemini
FALLBACK_PROVIDER=perplexity
PROVIDER_TIMEOUT=30
MAX_RETRIES=3

# Provider Routing Rules
RESEARCH_PROVIDER=perplexity
GENERATION_PROVIDER=gemini
SUMMARIZATION_PROVIDER=gemini

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Concurrency Settings
MAX_CONCURRENT_REQUESTS=10
ASYNC_WORKERS=4

# Memory Management
MAX_MEMORY_USAGE=1GB
GARBAGE_COLLECTION_THRESHOLD=100

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FORMAT=structured
LOG_FILE=entaera.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring Settings
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Tracing Settings
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
PROFILING_ENABLED=false
MEMORY_PROFILING=false
PERFORMANCE_TESTING=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_CACHE_DISABLED=true

# =============================================================================
# PRODUCTION CONFIGURATION (UNCOMMENT FOR PRODUCTION)
# =============================================================================

# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# API_RELOAD=false
# API_WORKERS=4
# CACHE_TTL=7200
# METRICS_ENABLED=true

# Security (Production)
# SECURE_COOKIES=true
# HTTPS_ONLY=true
# HSTS_ENABLED=true

# Database (Production)
# DATABASE_URL=postgresql://user:password@localhost/entaera
# DATABASE_POOL_SIZE=20
# DATABASE_POOL_OVERFLOW=0

# =============================================================================
# KATA LEARNING CONFIGURATION
# =============================================================================

# Learning Progress Tracking
KATA_PROGRESS_FILE=./data/kata_progress.json
CURRENT_KATA_DAY=1
KATA_COMPLETION_TRACKING=true

# Educational Features
SHOW_LEARNING_TIPS=true
DETAILED_ERROR_MESSAGES=true
STEP_BY_STEP_GUIDANCE=true

# Practice Mode Settings
PRACTICE_MODE_ENABLED=true
HINT_SYSTEM_ENABLED=true
SOLUTION_REVEAL_DELAY=300  # seconds