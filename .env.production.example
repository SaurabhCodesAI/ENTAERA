# ENTAERA Production Environment Configuration
# Copy this file to .env.production and update with secure values

# Application Configuration
ENVIRONMENT=production
APP_NAME=ENTAERA
SECRET_KEY=use-a-secure-random-secret-key-generated-for-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_DIR=./logs

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/entaera_prod
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# AI Model Configuration (Use Azure Key Vault or similar for production)
OPENAI_API_KEY=${AZURE_KEY_VAULT_OPENAI_KEY}
AZURE_OPENAI_ENDPOINT=${AZURE_KEY_VAULT_AZURE_ENDPOINT}
AZURE_OPENAI_API_KEY=${AZURE_KEY_VAULT_AZURE_KEY}
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google Vertex AI Configuration
GOOGLE_CLOUD_PROJECT=your-production-gcp-project
GOOGLE_APPLICATION_CREDENTIALS=/app/config/production-gcp-service-account.json

# Anthropic Configuration
ANTHROPIC_API_KEY=${AZURE_KEY_VAULT_ANTHROPIC_KEY}

# Security Configuration
CORS_ORIGINS=["https://your-production-domain.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Storage
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=5242880  # 5MB

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9091

# Production Features
DEBUG=false
RELOAD=false
ENABLE_DOCS=false

# SSL Configuration
SSL_CERT_PATH=/app/config/ssl/cert.pem
SSL_KEY_PATH=/app/config/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30